const pageLoad = function () {
    const contentDiv = document.querySelector(".content");

    // ---- Main Structure ----
    const headerDiv = document.createElement("div");
    contentDiv.appendChild(headerDiv);

    const bodyCard1 = document.createElement("div");
    contentDiv.appendChild(bodyCard1)
    const bodyCard2 = document.createElement("div");
    contentDiv.appendChild(bodyCard2)
    const bodyCard3 = document.createElement("div");
    contentDiv.appendChild(bodyCard3)

    const footerDiv = document.createElement("div");
    contentDiv.appendChild(footerDiv);

    // ---- Element Content & Properties ----
    // header
    headerDiv.classList.add("header");

    // header__left
    const headerLeft = document.createElement("div");
    headerLeft.classList.add("header__left");
    headerDiv.appendChild(headerLeft);

    const headerLeftH1 = document.createElement("h1");
    headerLeftH1.innerText = "Restaurant";
    headerLeft.appendChild(headerLeftH1);

    // header__right
    const headerRight = document.createElement("div");
    headerRight.classList.add("header__right");
    headerDiv.appendChild(headerRight);

    // header__bottom
    const headerBottom = document.createElement("div");


    // const navElements = ['Home', 'Menu', 'Contact'];
    // const headerRightUl = document.createElement("ul");
    // headerRight.appendChild(headerRightUl);

    // for (let i = 0; i < navElements.length; i++) {
    //     const li = document.createElement('li');
        
    //     li.innerHTML = navElements[i];

    //     headerRightUl.appendChild(li);
    // }

    // Body
    bodyCard1.classList.add("body-card", "card__one");
    const bodyCard1Btn = document.createElement("button");

    bodyCard2.classList.add("body-card", "card__two");
    bodyCard2.innerText = "Reserve";

    bodyCard3.classList.add("body-card", "card__three");
    bodyCard3.innerText = "Lounge";

    // Footer
    footerDiv.classList.add("footer");

    const footerLeft = document.createElement("div");
    const footerRight = document.createElement("div");
    footerLeft.classList.add("footer__left");
    footerRight.classList.add("footer__right");
    footerDiv.appendChild(footerLeft);
    footerDiv.appendChild(footerRight);
}

export { pageLoad as default}